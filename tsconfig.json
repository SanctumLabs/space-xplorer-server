{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": "src",
        "paths": {
            "@app": ["app.ts"],
            "@config": ["config.ts"],
            "@launchApi": ["data/api/LaunchApi.ts"],
            "@userRepo": ["data/db/UserRepository.ts"],
            "@core/*": ["core/*"],
            "@utils": ["utils.ts"],
            "@resolvers/*": ["resolvers/*"],
            "@logger": ["core/logger.ts"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "build", "dist",".vscode"]
}