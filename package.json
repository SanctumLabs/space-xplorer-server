{
  "name": "@wyvarn/space-xplorer-server",
  "private": false,
  "description": "Space Xplorer API",
  "main": "server.js",
  "version": "1.0.6",
  "repository": "git@github.com:Wyvarn/space-xplorer-server.git",
  "author": "BrianLusina <12752833+BrianLusina@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack --optimize-minimize",
    "clean": "rm -rf build",
    "prisma:generate": "prisma generate",
    "migrate:create": "prisma migrate save --experimental",
    "migrate:preview": "prisma migrate up --preview --experimental",
    "migrate:up": "prisma migrate up --experimental",
    "migrate:down": "prisma migrate down --experimental",
    "start": "npm-run-all --parallel watch:build watch:server",
    "serve": "node build/server.js",
    "pm2:prod": "pm2-runtime start ecosystem.config.js --only SpaceXplorerApi",
    "pm2:dev": "pm2-runtime start ecosystem.config.js --only SpaceXplorerApi-Dev",
    "test": "jest --runInBand",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/*/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/*/**/*.{js,ts,tsx}' --fix",
    "postinstall": "npm run prisma:generate",
    "watch:build": "webpack --watch",
    "watch:server": "nodemon"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/uuid": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "apollo-server-testing": "^2.16.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "nock": "^13.0.3",
    "node-fetch": "^2.6.0",
    "nodemon": "^2.0.4",
    "now": "^19.2.0",
    "npm-run-all": "^4.1.5",
    "pm2": "^4.4.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.0",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {
    "@prisma/cli": "^2.4.1",
    "@prisma/client": "^2.4.1",
    "apollo-datasource": "^0.7.2",
    "apollo-datasource-rest": "^0.9.3",
    "apollo-server": "^2.16.1",
    "apollo-server-cache-memcached": "^0.6.6",
    "apollo-server-cache-redis": "^1.2.2",
    "aws-sdk": "^2.729.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "isemail": "^3.2.0",
    "mime": "^2.4.6",
    "sequelize": "^6.3.4",
    "uuid": "^8.3.0",
    "winston": "^3.3.3"
  }
}
